{% extends 'layouts/base.html.jinja' %}
{% block content %}

<div class="h-screen bg-neutral-950 pt-32">
<div class="mx-auto w-1/2 flex flex-wrap"> 
<p class="text-5xl font-light text-white mx-auto block mb-6">Регистрация</p>
<div class="w-full bg-neutral-900 p-14 rounded-[2.5rem] text-white">
<form action="{{url_for('auth.create')}}" method="post">
{{ form.hidden_tag() }}
<div>{{form.login.label(class='text-xl mb-4')}}</div>
{{form.login(class="rounded-lg bg-neutral-800 block mt-2 focus:border-none focus:outline-none px-3 py-2 mb-6 w-full text-neutral-400 text-xl")}}
<div>{{form.nickname.label(class='text-xl mb-4')}}</div>
{{form.nickname(class="rounded-lg bg-neutral-800 block mt-2 focus:border-none focus:outline-none px-3 py-2 mb-6 w-full text-neutral-400 text-xl")}}
<div>{{form.password.label(class='text-xl mb-4')}}</div>
{{form.password(class="rounded-lg bg-neutral-800 block mt-2 focus:border-none focus:outline-none px-3 py-2 mb-8 w-full text-neutral-400 text-xl")}}
{{form.submit(class="rounded-lg text-xl bg-neutral-800 block mt-2 focus:border-none focus:outline-none px-3 py-2 mb-8 mx-auto w-1/2 cursor-pointer hover:bg-[#1e1e1e] transition-all ease-in")}}
</form>
<div class="text-xl">Уже есть аккаунт? <a href="{{url_for('auth.login')}}" class="text-cyan-500 hover:text-cyan-700 hover:underline ml-1">Войти</a></div>
</div>
</div>
</div>
{% endblock %}