{% extends 'layouts/base.html.jinja' %}
{% block content %}

<div class="h-screen bg-gray-900 pt-48">
<div class="mx-auto rounded-md w-1/3 flex flex-wrap"> 
<p class="text-xl font-light text-white mx-auto block mb-4">Регистрация</p>
<div class="w-full bg-gray-950 p-8 px-10 rounded-lg text-white">
<form action="{{url_for('auth.create')}}" method="post">
{{ form.hidden_tag() }}
<div>{{form.login.label(class='ml-1')}}</div>
{{form.login(class="rounded-lg bg-slate-800 block mt-2 focus:border-none focus:outline-none px-3 py-2 mb-6 w-full")}}
<div>{{form.nickname.label(class='ml-1')}}</div>
{{form.nickname(class="rounded-lg bg-slate-800 block mt-2 focus:border-none focus:outline-none px-3 py-2 mb-6 w-full")}}
<div>{{form.password.label(class='ml-1')}}</div>
{{form.password(class="rounded-lg bg-slate-800 block mt-2 focus:border-none focus:outline-none px-3 py-2 mb-6 w-full")}}
{{form.submit(class="rounded-lg bg-slate-800 block mt-2 focus:border-none focus:outline-none px-3 py-2 mb-6 mx-auto w-1/2 cursor-pointer hover:bg-slate-900 transition-all ease-in")}}
</form>
<div>Уже есть аккаунт? <a href="{{url_for('auth.login')}}" class="text-gray-800 hover:text-gray-500 hover:underline">Войти</a></div>
</div>
</div>
</div>
{% endblock %}